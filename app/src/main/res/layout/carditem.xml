<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="card_onclick"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <!--Title with maximum 2 lines-->

    <ImageView
        android:id="@+id/home_item_img"
        android:layout_width="185dp"
        android:layout_height="185dp" />

    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="2"
        android:text="Title"
        android:textColor="#333"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_item_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_card_portrait"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
        <!--username-->
        <TextView
            android:id="@+id/home_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:gravity="right">
            <ImageView
                android:id="@+id/home_item_post_type"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_finder_bingo"/>

            <LinearLayout

                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_card_coordinate" />
                <!--TODO: need to set the distance to real distance 考虑怎么用viewmodel-->
                <TextView
                    android:id="@+id/home_item_location"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1.1km"
                    android:textColor="#333"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
        <!--location-->

    </LinearLayout>
</LinearLayout>